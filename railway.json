{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["SHOOTLOGIX/**"],
    "nixpacksConfigPath": "SHOOTLOGIX/nixpacks.toml"
  },
  "deploy": {
    "startCommand": "cd SHOOTLOGIX && gunicorn wsgi:app --bind 0.0.0.0:$PORT --workers 1 --timeout 120",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
